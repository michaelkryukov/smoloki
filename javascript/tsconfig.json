{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es2018"
  },
  "include": ["*.ts", "tests"],
  "exclude": ["node_modules", "dist"]
}
